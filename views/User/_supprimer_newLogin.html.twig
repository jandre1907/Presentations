{% extends "SelBundle::layout.html.twig" %}

{% block title "Sel - Login" %}

{% block content_header '' %}

{% block content %}
    <div class="globalWrapper">
        <div class="columns column_60 column_mobile_100 hide-mobile">
            <h2>Connexion</h2>
            
            {%  if (form is defined) %}
            <form action="{{ url('post_login') }}" method="POST" {{ form_enctype(form) }}>

                <div class="row border">
                    <div class="columns column_mobile_100 input">
                    {{ form_row(form.email) }}
                    </div>
                </div>
                <div class="row border">
                    <div class="columns column_mobile_100 input">
                    {{ form_row(form.current_password) }}
                    </div>
                </div>
                <div  class="row border">
                    <div class="columns column_90">
                        <a href="#" data-popup="{{ path('fos_user_resetting_request') }}">{% trans %}Mot de passe oubli√©?{% endtrans %}</a>
                    </div>
                </div>
                <input type="hidden" id="remember_me" name="_remember_me" value="true" />
                
                <input type="submit" value="{% trans %}Me connecter{% endtrans %}">
            </form>
        </div>
        <div class="columns column_40 column_mobile_100 hide-mobile">
            <h2>Creer un espace client</h2>
            <div class="row">
                <div class="column_90 column_mobile_100 border">
                    <p>Enregistrer vous avant de poursuivre</p>
                    <a href="{{ path('new_user') }}" class="submitButton">Creer mon espace Client</a>
                </div>
            </div>
        </div>
            
            {% endif %}
</div>

{% endblock %}


