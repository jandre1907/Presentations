{% endblock previousArrow %}

{% block content %}
<div>
	<div class="row">
		<div class="col-xs-12 col-sm-8 col-sm-offset-2 text-center">
			<div class="confirmation">
				 <span class="general_Intext">
					<img src="{{ asset('bundles/sel/images/check2x.png') }}" class="picto valid" alt="{{ 'pay.pay_confirm_iban.confirmation_label_img'|trans({}, 'pay') }}">
					<strong>
						{{ 'pay.pay_confirm_iban.moyen_paiement_ajoute_sub_title_2'|trans({}, 'pay') }}
					</strong>
				</span>
				{% if returnUrl == 'sel_iban_manage' or returnUrl == 'sel_payment_list' %}
				<p>{{ 'pay.pay_confirm_iban.associer_moyen_paiement_forfait'|trans({}, 'pay') }}</p>
				{% endif %}
			</div>
		</div>
	</div>

	{% if returnUrl == 'sel_iban_manage' or returnUrl == 'sel_payment_list' %}
	<div class="row">
		<div class="col-xs-12 text-center">
			<button onclick="location.href='{{ path('sel_iban_manage', { 'md5iban': md5iban }) }}';" class="btn btn-default aide-photo-btn" type="button"
				value="{{ 'pay.pay_confirm_iban.associer_maintenant_moyen_paiement_forfait'|trans({}, 'pay') }}">
				<span>{{ 'pay.pay_confirm_iban.associer_a_un_forfait'|trans({}, 'pay') }}</span>
			</button>
		</div>
	</div>
    <div class="row">
        <div class="col-xs-12 text-center">
            <a href="{{ path('sel_payment_list') }}" class="link addto margin-top" title="{{ 'pay.pay_confirm_iban.do_that_later_title'|trans({}, 'pay') }}">
                <span>{{ 'pay.pay_confirm_iban.do_that_later'|trans({}, 'pay') }}</span>
            </a>
        </div>
    </div>
	{% endif %}
	{% if returnUrl == 'sel_contrat_iban_manage' %}
	<div class="row">
		<div class="col-xs-12 text-center">
			<a href="{{ path('sel_contrat_iban_manage', { 'contract': contract, 'codeProduit': codeProduit }) }}" class="link addto margin-top" title="{{ 'pay.pay_confirm_iban.back_to_change_rib_title'|trans({}, 'pay') }}">
				<span>{{ 'pay.pay_confirm_iban.back_to_change_rib'|trans({}, 'pay') }}</span>
			</a>
		</div>
	</div>
	{% endif %}
</div>

{% endblock content%}
