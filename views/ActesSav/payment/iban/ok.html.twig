{% extends "SelBundle::layout.html.twig" %}
 {% block title %}{{ 'pay.pay_confirm_iban.service_navigo_title'|trans({}, 'pay') }}{% endblock %}

 {% block content_header '' %}
 {% block flashMessage %}{% endblock flashMessage %}

 {% block breadcrumb %}
<div id="box_breadcrumb_id" class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
        <ol class="breadcrumb">
            <li><a href="http://www.navigo.fr" title="{{ 'pay.pay_confirm_iban.accueil_link_label'|trans({}, 'pay') }}">{{ 'pay.pay_confirm_iban.accueil_link_label'|trans({}, 'pay') }}</a></li>
            <li><a href="{{ path('sel_homepage') }}" title="{{ 'pay.pay_confirm_iban.service_navigo_link_label'|trans({}, 'pay') }}">{{ 'pay.pay_confirm_iban.service_navigo_link_label'|trans({}, 'pay') }}</a></li>
            <li><a href="{{ path('sel_espace_client') }}" title="{{ 'pay.pay_confirm_iban.espace_client_link_label'|trans({}, 'pay') }}">{{ 'pay.pay_confirm_iban.espace_client_link_label'|trans({}, 'pay') }}</a></li>
            <li><a href="{{ path('sel_payment_list') }}" title="{{ 'pay.pay_confirm_iban.moyen_paiement_link_label'|trans({}, 'pay') }}">{{ 'pay.pay_confirm_iban.moyen_paiement_link_label'|trans({}, 'pay') }}</a></li>
            <li class="active">{{ 'pay.pay_confirm_iban.ajout_bic_iban_link_label'|trans({}, 'pay') }}</li>
          </ol>
    </div>
</div>
{% endblock breadcrumb %}

 {% block contentTitle %}
<div class="row">
	<div class="col-xs-12 col-sm-12 col-md-12">
		<div class="heading">
			<h1>{{ 'pay.pay_confirm_iban.ajout_bic_iban_title'|trans({}, 'pay') }}</h1>
		</div>
	</div>
</div>
 {% endblock contentTitle %}

