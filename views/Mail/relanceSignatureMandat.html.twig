{% extends "SelBundle::Mail/layoutSNA.html.twig" %}
{% block title %}<h2 style="background: #ffffff;display: inline-block;font-size: inherit;margin: 0;padding: 0 0 5px;width: auto;">{{ 'mails.mails_relance_sign_sepa.subject'|trans({}, 'mails')|raw }}</h2>{% endblock title %}
{% block body %}
    {% block body_text %}
        {% autoescape false %}
            {{ 'mails.mails_relance_sign_sepa.message'|trans({
                '%civilite%': civilite,
                '%nomPayeur%': nomPayeur,
                '%prenomPayeur%': prenomPayeur,
                '%dateDebutValidite%': dateDebutValidite,
                '%zones%': zones,
                '%tarif%': tarif,
                '%civilitePorteur%': civilitePorteur,
                '%prenomPorteur%': firstnamePorteur,
                '%nomPorteur%': namePorteur,
                '%link%': link,
                '%dateLimite%': dateLimite|date('d/m/Y')
            }, 'mails')|raw }}
        {% endautoescape %}
    {% endblock %}
    {% block body_html %}{% endblock %}
{% endblock body %}
