{% extends "SelBundle::Mail/layoutIR.html.twig" %}
{% block title %}
	{% if type == 'htp' %}
		<h2 style="background: #ffffff;display: inline-block;font-size: inherit;margin: 0;padding: 0 0 5px;width: auto;">{{ 'mails.mails_confirmation_pv_htp_ir.subject'|trans({}, 'mails')|raw }}</h2>
	{% else %}
		<h2 style="background: #ffffff;display: inline-block;font-size: inherit;margin: 0;padding: 0 0 5px;width: auto;">{{ 'mails.mails_confirmation_pv_tpc1_ir.subject'|trans({}, 'mails')|raw }}</h2>
	{% endif %}
{% endblock title %}
{% block body %}
    {% block body_text %}
        {% autoescape false %}
        	{% if type == 'htp' %}
        	    {{ 'mails.mails_confirmation_pv_htp_ir.message'|trans({ '%username%': username, '%firstname%' : porteur.prenom, '%lastname%' : porteur.nom, '%reference%' : porteur.reference, '%montant%' : montant, '%dateReception%' : dateReception, '%typeForfait%': typeForfait, '%passNumber%': passNumber, '%espaceClientUrl%': espaceClientUrl }, 'mails')|raw }}
        	{% else %}
        	    {{ 'mails.mails_confirmation_pv_tpc1_ir.message'|trans({ '%username%': username, '%firstname%' : porteur.prenom, '%lastname%' : porteur.nom, '%reference%' : porteur.reference, '%date%' : dateDemande, '%espaceClientUrl%': espaceClientUrl, '%typeForfait%': typeForfait, '%passNumber%': passNumber }, 'mails')|raw }}
        	{% endif %}
        {% endautoescape %}
    {% endblock %}
    {% block body_html %}{% endblock %}
{% endblock body %}
