{% block body %}
    {% block body_text %}
        {% autoescape false %}
            {% if porteurIsPayeur %}
                {{ 'mails.mails_otp_blocage_porteur.message'|trans({'%username%': username, '%signature_url%': signature_url}, 'mails')|raw }}
