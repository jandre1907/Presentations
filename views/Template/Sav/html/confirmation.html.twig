<span id="confirmation-demande" class="general_Intext" tabindex="-1">{{"pv.pv_confirmation.title"|trans({}, "pv", "fr")|raw}}</span>
{% verbatim %}
<div class="row">
    <div class="col-xs-12 col-sm-8 col-sm-offset-2">
        <div class="confirmation">
            <div data-ng-show="validatedDeclaration">
				<div data-message-dv meskey="{{pageCtrl.meskey2}}"></div>
                <div data-message-dv meskey="{{pageCtrl.meskey}}"></div>
                <p data-message-dv meskey="{{pageCtrl.meskey3}}"></p>
                <p data-message-dv meskey="{{pageCtrl.meskey4}}"></p>
                <p data-message-dv meskey="{{pageCtrl.meskey5}}"></p>
                <p data-message-dv meskey="{{pageCtrl.meskey6}}"></p>
            </div>
            <div data-ng-show="failedDeclaration">
                <p data-message-dv meskey="{{pageCtrl.meskey7}}"></p>
            </div>
        </div>
    </div>
</div>

